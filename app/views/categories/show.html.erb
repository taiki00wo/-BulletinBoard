<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div class="category">
        <% categories = Category.all %>
        カテゴリー<br>
        <% categories.each do |category| %>
          <%= link_to category.name, category_path(category) %><br>
        <% end %>
      </div>
    </div>
    <div class="col-lg-10">
      <div class="boards">
        <h4>カテゴリー：<%= @category.name %></h4>

        <% @boards.each do |board| %>
          <%= board.created_at%>
          <%= link_to board.title, board_path(board) %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>